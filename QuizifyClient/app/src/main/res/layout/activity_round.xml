<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#0099cc"
    tools:context="com.myapps.quizify.quizifyclient.game.RoundActivity"

    android:orientation="horizontal"
    >


<RelativeLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_gravity="center"
    >

    <Button android:id="@+id/alternative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button android:id="@+id/alternative3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alternative1"
        />

</RelativeLayout>

<RelativeLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:layout_gravity="center"
    >
    <Button android:id="@+id/alternative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <Button android:id="@+id/alternative4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alternative2"
        />

</RelativeLayout>
</LinearLayout>
